<form action="/person/<%= @person.id %>" method="POST">
  <div>
    <label>Avatar URL</label>
    <input type="text" name="avatar" placeholder="Enter an Image URL" value="<%= @person.avatar %>">
  </div>
  <div>
    <label>First Name</label>
    <input type="text" name="first_name" placeholder="First Name" value="<%= @person.first_name %>">
  </div>
  <div>
    <label>Last Name</label>
    <input type="text" name="last_name" placeholder="Last Name" value="<%= @person.last_name %>">
  </div>
  <div>
    <label>Gender</label>
    <input type="text" name="gender" placeholder="Gender" value="<%= @person.gender %>">
  </div>
  <div>
    <label>City ID</label>
    <input type="text" name="city_id" placeholder="City ID" value="<%= @person.city_id %>">
  </div>

  <div>
    <input type="submit" value="Save Person">
  </div>
  <% if(@person.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>
